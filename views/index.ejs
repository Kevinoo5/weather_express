<%- include('header'); %>
<div id="weather" class="container s12 m4 l8" style="text-align: center">
    <h3 id="description"><%= description %></h3>
    <h2 id="temp"><%= temp %></h2>
    <h2 id="location"><%= city %></h2>
</div>
<div id="change-city" class="container s12 m4 l8 z-depth-5">
    <form class="center-align">
        <label for="city-name" style="font-size: 25px">Change city:</label>
        <input type="text" id="city-name">
        <input type="submit" class="btn" value="Save changes">
    </form>
    <br>
</div>
<%- include('footer'); %>